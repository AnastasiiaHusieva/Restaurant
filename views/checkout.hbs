<div id="checkout" class="col-lg-6 col-md-6 col-sm-12">
  <div class="checkout-cont">
         <h2 class="checkout-title">Your Choice</h2>
         <div class="col-lg-2 col-md-3 col-sm-4 checkout-items">
              {{#each uniqueCartItems}}
               <div class="checkout-item">
                 <img src="{{this.itemImageURL}}" alt="food img" class="checkout-img" />
               </div>
             {{/each}}
          </div>
  </div>    

   
<div class="checkout-cont">
       <h2 class="checkout-title">Delivery Address</h3>
       <div class="address-box">
        <form  action="">
           <label for="city">City:</label>
           <select>
             <option>Hanover</option>
             <option>Bremen</option>
             <option>Hamburg</option>
           </select>
           <label for="Street">Street:</label>
           <input type="text" />
           <br/>
           <label for="house-number">House Number:</label>
           <input type="number" />
           <br/>
           <label for="phone">Phone Number:</label>
           <input type="text" />
        </form>
      </div>
</div>
</div>

        <div class="total">
           <h2>Total: ${{totalAmount}}</h3>
         </div>

    <h2 class="checkout-title">Payment Methods</h2>
  <div class="payment-box">
    <div class="payment-card col-lg-6 col-md-6 col-sm-12">
      <h2>Credit Card</h2>
      <div class="card">
        <input type="text" placeholder="Credit Card Number" class="input" />
        <input type="text" placeholder="Expiration Date" class="input" />
      </div>
    </div>

    <div class="payment-paypal">
      <h2>PayPal</h2>
      <div class="paypal">
        <input type="text" placeholder="PayPal Email" class="input" />
      </div>
    </div>

  </div>
  <div class="pay-btn">
  <form method="post" action="/order/">
    <!-- Other form fields here -->
    <input type="hidden" name="userId" value="{{userObject._id}}" />
    <button class="cartBTN" type="submit">Pay</button>
  </form>
</div>


<script src="/js/checkout.js"></script>