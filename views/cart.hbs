<h1 class="my-cart-h1">My cart</h1>

<h1>Shopping Cart</h1>
    <table>
        <thead>
            <tr >
                <th>Item</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {{#each cartItems}}
            <tr>
                <td>{{itemName}}</td>
                <td>${{itemPrice}}</td>
                <td>{{quantity}}</td>
                <td>${{totalPrice}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p>Total: ${{totalCartPrice}}</p>