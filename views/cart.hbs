<h1 class="my-cart-h1">My cart</h1>

<h1>Shopping Cart</h1>
<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    {{#each userObject.cart}}
      <tr>
        <td><img
            src="{{this.itemImageURL}}"
            alt="food images"
            class="card-img-top"
          /></td>
        <td>{{this.itemName}}</td>
        <td>${{this.itemPrice}}</td>
        <td>{{quantity}}</td>
        <td>${{totalPrice}}</td>
      </tr>
      {{!-- <form action="/cart" method="post">
        <input type="hidden" name="itemId" value="{{_id}}" />
        <button>Delete</button>
      </form> --}}
      <a href="/cart/{{this._id}}">Delete</a>
    {{/each}}
  </tbody>
</table>
<a href="/checkout">Checkout</a>
<p>Total: ${{totalCartPrice}}</p>